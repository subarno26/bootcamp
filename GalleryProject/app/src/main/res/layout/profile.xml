<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/uploadProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_profile_picture"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/uImage"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user3"
        android:layout_below="@id/uploadProfile"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"/>
    <ImageView
        android:id="@+id/emailImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/email"
        android:layout_below="@id/uImage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/uImage"
        android:layout_alignBottom="@id/uImage"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/roboto"
        android:text="snkfmsf"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dnasjfbs"
        android:layout_below="@id/username"
        android:fontFamily="@font/roboto"
        android:layout_alignStart="@id/username"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/logoutBtn"
        android:background="@color/colorAccent"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEmail"
        android:layout_marginTop="50dp"
        android:text="@string/logout"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>