<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/size_150"
        android:layout_height="@dimen/size_150"
        android:src="#8C9EFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_70"
        />

    <ProgressBar
        android:id="@+id/progressImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profile_image"
        android:layout_alignBottom="@id/profile_image"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/uploadProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_profile_picture"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/font_16"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"/>

    <ImageView
        android:id="@+id/uImage"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:src="@drawable/user3"
        android:layout_below="@id/uploadProfile"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginStart="@dimen/margin_100"/>
    <ImageView
        android:id="@+id/emailImage"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:src="@drawable/email"
        android:layout_below="@id/uImage"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_100"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/uImage"
        android:layout_alignBottom="@id/uImage"
        android:layout_marginStart="@dimen/margin_15"
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/font_20"
        android:layout_marginTop="@dimen/margin_30"/>
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:fontFamily="@font/roboto"
        android:layout_alignStart="@id/username"
        android:textSize="@dimen/font_20"
        android:layout_marginTop="@dimen/margin_10"/>

    <Button
        android:id="@+id/logoutBtn"
        android:background="@color/colorAccent"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEmail"
        android:layout_marginTop="@dimen/margin_50"
        android:text="@string/logout"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>