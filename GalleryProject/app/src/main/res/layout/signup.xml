<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>


    <EditText
        android:id="@+id/sNameEdit"
        android:padding="10dp"
        android:background = "@drawable/borders"
        android:layout_below="@id/userImage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="@string/enter_name"
        android:gravity="center"
        />
    <EditText
        android:padding="10dp"
        android:background = "@drawable/borders"
        android:id="@+id/sEmailEdit"
        android:layout_below="@id/sNameEdit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="@string/enter_email"
        android:gravity="center"
        />

    <EditText
        android:padding="10dp"
        android:background = "@drawable/borders"
        android:id="@+id/sPasswordEdit"
        android:layout_below="@id/sEmailEdit"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="@string/enter_password"
        android:gravity="center"
        />

    <Button
        android:backgroundTint="@color/borderColor"
        android:textColor="#ffff"
        android:padding="10dp"
        android:textSize="18sp"
        android:id="@+id/sSignup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sPasswordEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Sign up"
        />
</RelativeLayout>